<div class="card" style="width: 18rem;">
  <h1>My Tasks</h2>

  <div class="">

    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.title, task_path(task) %></li>
      <% end %>
    </ul>
  </div>
  <div class="btn btn-secondary">
    <%= link_to "Add New Task", new_task_path%>
  </div>
</div>
